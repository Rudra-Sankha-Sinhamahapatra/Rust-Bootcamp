{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Rust Project",
      "type": "shell",
      "command": "cargo build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Run Rust Project",
      "type": "shell",
      "command": "cargo run",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
